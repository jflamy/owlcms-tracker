{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OWLCMS Tracker - Production Mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--max-old-space-size=1024"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "OWLCMS Tracker - Learning Mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:learning"],
      "env": {
        "NODE_ENV": "development",
        "LEARNING_MODE": "true",
        "NODE_OPTIONS": "--max-old-space-size=1024"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}