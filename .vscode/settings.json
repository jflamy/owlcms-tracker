{
  // Use Git Bash as the default terminal shell on Windows
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.profiles.windows": {
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": ["--login"],
      "icon": "terminal-bash"
    },
    "PowerShell": null,
    "Command Prompt": null
  },
  
  // Dock the debug control bar instead of floating
  "debug.toolBarLocation": "commandCenter",
  
  // Disable markdown link validation to prevent false positives
  "markdown.validate.enabled": false,
  // Let Stylelint handle CSS validation instead of the built-in VS Code validator
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false
  ,
  // Route linting to Stylelint (includes Svelte <style> blocks)
  "stylelint.validate": ["css", "scss", "less", "svelte"],
  // Disable Svelte's built-in CSS diagnostics so Stylelint is the single source
  "svelte.plugin.css.diagnostics.enable": false,
  // Fallback: silence unknown property warnings from CSS LS if it still runs
  "css.lint.unknownProperties": "ignore"
}